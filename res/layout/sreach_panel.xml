<?xml version="1.0" encoding="utf-8"?>
<FrameLayout     xmlns:android="http://schemas.android.com/apk/res/android"
    
     android:id="@+id/search1"
	android:layout_width="713dp"
    android:layout_height="474dp"
    android:layout_gravity="center"
    android:background="@drawable/bg"
	>
    
    <TextView 
        android:id="@+id/search_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:textSize="28sp"
        android:textColor="@color/primary_text_light"
        android:text="请选择城市"
        />
    
    <com.routon.weatherwidget.CityChoosePanel 
        android:id="@+id/search_province_list"
        android:layout_width="172dp"
        android:layout_height="336dp"
        android:layout_marginLeft="112dp"
        android:layout_marginTop="100dp"
        android:background="@drawable/blue"
        android:scrollbars="none"
        ></com.routon.weatherwidget.CityChoosePanel>
    
    <com.routon.weatherwidget.CityChoosePanel 
        android:id="@+id/search_city_list"
        android:layout_width="172dp"
        android:layout_height="336dp"
        android:layout_marginLeft="430dp"
        android:layout_marginTop="100dp"
        android:background="@drawable/blue"
        android:scrollbars="none"
        ></com.routon.weatherwidget.CityChoosePanel>
    
    <TextView 
	    android:id="@+id/provinceShield"
	    android:layout_width="172dp"
		android:layout_height="66dp"
		android:layout_marginLeft="112dp"
		android:layout_marginTop="235dp" 
		android:textSize="27sp"
		android:gravity="center" 
		android:visibility="invisible" /> 
    
    <TextView
        android:id="@+id/cityShield"
	    android:layout_width="172dp"
		android:layout_height="66dp"
		android:layout_marginLeft = "430dp"
		android:layout_marginTop="235dp"
		android:textSize="27sp"
		android:gravity="center"
		android:visibility="invisible" 
        />
    
    <ImageView 
        android:id="@+id/search_button"
        android:layout_width="188dp"
        android:layout_height="66dp"
        android:layout_marginLeft="104dp"
        android:layout_marginTop="235dp"
        android:src="@drawable/btn_transparent"
        />
     	
    
</FrameLayout>
