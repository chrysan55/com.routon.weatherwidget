<?xml version="1.0" encoding="utf-8"?>
<FrameLayout     xmlns:android="http://schemas.android.com/apk/res/android"
    
     android:id="@+id/search1"
	android:layout_width="297dp"
    android:layout_height="238dp"
	>
    
     <ImageView
         android:id="@+id/search_back"
         android:layout_width="297dp"
         android:layout_height="238dp"
         android:layout_marginLeft="0dp"
         android:layout_marginTop="0dp"
         android:background ="@drawable/search_bkgrd" />       
    
    <AutoCompleteTextView 
  		android:id="@+id/autoComplete"
  		android:layout_width="286dp"
        android:layout_height="61dp"
  		android:layout_marginLeft="2dp"
        android:layout_marginTop="25dp"
        android:textColor="#000000"
        android:textSize="18sp"
        android:completionThreshold="1"
        android:singleLine="true"
        android:background="@drawable/focus_bar"
        android:hint="请输入城市"
        android:paddingLeft="50dp"
        android:textCursorDrawable="@null" 
        android:dropDownVerticalOffset="-7dp"
        android:dropDownHorizontalOffset="0dp"
        android:dropDownWidth="280dp"
        android:dropDownHeight="145dp"
        android:dropDownSelector="@drawable/search_bar"
		
        />
     	
    
</FrameLayout>
