<resources xmlns:android="http://schemas.android.com/apk/res/android">

        <style name="CuntomTranslucent">
        <item name="@android:windowEnterAnimation">@anim/translucent_enter</item>
        <item name="@android:windowExitAnimation">@anim/translucent_exit</item>
    </style>
    
    <style name="CustomTheme">
        <item name="android:windowBackground">@color/transparent_background</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@style/CuntomTranslucent</item>
    </style>
    <style name="CustomDialog" > 
        <item name="android:windowNoTitle">true</item> 
        <item name="android:windowBackground">@android:color/transparent</item> 
        <item name="android:windowFullscreen">?android:windowNoTitle</item> 
    </style> 
          <style name="DialogText"> 
        <item name="android:textColor">#FFFFFFFF</item> 
        <item name="android:textSize">24dp</item> 
    </style> 

</resources>